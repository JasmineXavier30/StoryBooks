<h5>Dashboard</h5>
<h3>Welcome {{name}}!</h3>
<p>Here are your stories.</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}} {{! _id is stories._id and so on}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                    {{! with handlebars, no need to put parentheses for fn call and params passed with space - formatDate(createdAt, 'MM/DD/YYYY h:mm:ss a')}}
                    <td>{{formatDate createdAt 'MM/DD/YYYY h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a class="btn btn-float" href="/stories/edit/{{_id}}">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form action="/stories/{{_id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn red"><i class="fas fa-trash"></i></button>
                        </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories. Create one!</p>
{{/if}}